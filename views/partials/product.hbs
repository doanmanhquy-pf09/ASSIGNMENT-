{{> header}}
<!-- Product -->
<div class="bg0 m-t-23 p-b-140">
  <div class="container">
    <div class="flex-w flex-sb-m p-b-52">
      <div class="flex-w flex-l-m filter-tope-group m-tb-10">
        <button
          class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1"
          data-filter="*">
          All Products
        </button>
        {{#each cate }}
        <button
          class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5"
          data-filter=".{{this}}" style="text-transform: capitalize;">
          {{this}}
        </button>

        {{/each}}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="alert alert-success"
          {{#if noMessages}}
          hidden
          {{/if}} data-delay="2000">
          {{successMsg}}
        </div>
      </div>
    </div>
    <div class="row isotope-grid">
      {{#each products }}
      {{#each this}}
      <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item {{this.cate}}">
        <!-- Block2 -->
        <div class="block2">
          <div class="block2-pic hov-img0">
            <img src="{{ getOneImage this.imagePath }}" alt="IMG-PRODUCT" />
            <a
              href="/product-detail/{{this._id}}"
              class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2
              hov-btn1 p-lr-15 trans-04 js-show-modal1">
              Detail
            </a>
          </div>
          <div class="block2-txt flex-w flex-t p-t-14">
            <div class="block2-txt-child1 flex-col-l">
              <a
                href="/product-detail/{{this._id}}"
                class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                {{ this.title }}
              </a>
              <span class="stext-105 cl3"> ${{ this.price }} </span>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{/each}}
    </div>
  </div>
</div>
{{> footer}}